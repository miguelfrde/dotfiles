
# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# For virtualenvwrapper to work properly
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python

# oh-my-zsh plugins
plugins=(git autopep8 brew bundler django gem heroku pip
         python rake ruby scala sbt virtualenv virtualenvwrapper
         git-flow sublime zsh-syntax-highlighting brew-cask)

# Theme to load
ZSH_THEME="miguelfrde"

# Zsh-syntax-highlighting pluginn
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern cursor)

source $ZSH/oh-my-zsh.sh
source ~/.exports
source ~/.aliases
source ~/.functions

