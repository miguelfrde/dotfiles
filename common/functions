# Update OSX
function update_osx() { 
    echo "Find Apple software updates"
    sudo softwareupdate -i -a
}

# Update brew
function update_brew() {
    echo "Update brew and its packages"
    brew update
    brew upgrade
    brew cleanup
}

# Update gems
function update_gems() {
    echo "Update gems"
    sudo gem update --system
    sudo gem update
}

# Update OSX and brew
function update() {
    update_osx
    update_pip
    update_gems
}

# Create a new directory and cd into it
function mkd() {
    mkdir -p "$1" && cd "$1"
}

# Update all pip packages
function update_pip() {
    pip freeze | cut -d = -f 1 | xargs pip install -U
}

# Get personal MIT license
function mit_license() {
    local name="Miguel Flores Ruiz de Eguino"
    local url="http://www.miguelfrde.com/"
    local email="miguel.frde@gmail.com"
    local miturl="http://miguelfrde.mit-license.org"
    local json='{"copyright": "${name}", "url": "${url}", "email": "${email}", "format": "txt" }'
    curl -d ${json} ${miturl} > /dev/null 2>&1
    curl -s ${miturl} > $1
}

function docker-ip() {
    docker-machine ip default 2>/dev/null
}

function clean_docker() {
    docker rm -v $(docker ps -a -q -f status=exited) > /dev/null 2>&1
    docker rmi $(docker images -f "dangling=true" -q)
}

function change_container_cluster() {
    gcloud container clusters get-credentials $1
    kubectl config set-cluster $1
}

function replace_in_files() {
    local original=$1
    local replacement=$2
    local files=$3
    grep -lr "$original" $files | xargs sed -i "" "s/$original/$replacement/g"
}
